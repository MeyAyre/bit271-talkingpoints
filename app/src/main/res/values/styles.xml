<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/home_page_pastel</item>
    </style>
    <style name="home_page_pastel">
        <item name="android:fontFamily">@font/palanquin_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="home_page_bold">

    </style>
    <style name="HeaderTheme">
        <item name="android:background">@color/progress_pink</item>
    </style>
    <style name="page_title">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/palanquin_dark</item>
    </style>
    <style name="talkingTitles">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>
